@page "/quessions"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using LanguageLearning.Domain
@using LanguageLearning.Data
@implements IAsyncDisposable
@inject IDbContextFactory<LanguageLearning.Data.LanguageLearningContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="quessions/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Quession">
    <PropertyColumn Property="quession => quession.Text" />
    <PropertyColumn Property="quession => quession.OptA" />
    <PropertyColumn Property="quession => quession.OptB" />
    <PropertyColumn Property="quession => quession.OptC" />
    <PropertyColumn Property="quession => quession.OptD" />
    <PropertyColumn Property="quession => quession.CorrrectAnswer" />
    <PropertyColumn Property="quession => quession.QuizId" />
    <PropertyColumn Property="quession => quession.DateCreated" />
    <PropertyColumn Property="quession => quession.DateUpdated" />
    <PropertyColumn Property="quession => quession.CreatedBy" />
    <PropertyColumn Property="quession => quession.UpdatedBy" />

    <TemplateColumn Context="quession">
        <a href="@($"quessions/edit?id={quession.Id}")">Edit</a> |
        <a href="@($"quessions/details?id={quession.Id}")">Details</a> |
        <a href="@($"quessions/delete?id={quession.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private LanguageLearningContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
