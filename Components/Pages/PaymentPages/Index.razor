@page "/payments"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using LanguageLearning.Domain
@using LanguageLearning.Data
@implements IAsyncDisposable
@inject IDbContextFactory<LanguageLearning.Data.LanguageLearningContext> DbFactory
@rendermode InteractiveServer

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="payments/create">Create New</a>
</p>

<QuickGrid Class="table" Items="FilteredPayments" Pagination="paginationState">
    <PropertyColumn Property="payment => payment.Amount" />
    <PropertyColumn Property="payment => payment.Method" />
    <PropertyColumn Property="payment => payment.Status" >
        <ColumnOptions>
            <div>
                <input type="search" @bind="searchText" @bind:event="oninput" autofocus />
            </div>
        </ColumnOptions>
    </PropertyColumn>
    <PropertyColumn Property="payment => payment.DateCreated" />
    <PropertyColumn Property="payment => payment.DateUpdated" />
    <PropertyColumn Property="payment => payment.CreatedBy" />
    <PropertyColumn Property="payment => payment.UpdatedBy" />

    <TemplateColumn Context="payment">
        <a href="@($"payments/edit?id={payment.Id}")">Edit</a> |
        <a href="@($"payments/details?id={payment.Id}")">Details</a> |
        <a href="@($"payments/delete?id={payment.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>
<Paginator State="paginationState" />

@code {
    private LanguageLearningContext context = default!;
    PaginationState paginationState = new PaginationState { ItemsPerPage = 1 };

    private string searchText = "";
    private IQueryable<Payment> FilteredPayments => context.Payment.Where(p =>
    p.Status.Contains(searchText));

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
