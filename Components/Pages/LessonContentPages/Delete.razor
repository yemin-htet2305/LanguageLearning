@page "/lessoncontents/delete"
@using Microsoft.EntityFrameworkCore
@using LanguageLearning.Domain
@inject IDbContextFactory<LanguageLearning.Data.LanguageLearningContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>LessonContent</h2>
    <hr />
    @if (lessoncontent is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ContentType</dt>
            <dd class="col-sm-10">@lessoncontent.ContentType</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PositionOrder</dt>
            <dd class="col-sm-10">@lessoncontent.PositionOrder</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LessonId</dt>
            <dd class="col-sm-10">@lessoncontent.LessonId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@lessoncontent.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@lessoncontent.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@lessoncontent.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@lessoncontent.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="lessoncontent" OnValidSubmit="DeleteLessonContent" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(lessoncontent is null)">Delete</button> |
            <a href="/lessoncontents">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private LessonContent? lessoncontent;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        lessoncontent = await context.LessonContent.FirstOrDefaultAsync(m => m.Id == Id);

        if (lessoncontent is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteLessonContent()
    {
        using var context = DbFactory.CreateDbContext();
        context.LessonContent.Remove(lessoncontent!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/lessoncontents");
    }
}
