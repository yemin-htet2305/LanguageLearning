@page "/admin/lessons/edit"
@using LanguageLearning.Data
@using Microsoft.EntityFrameworkCore
@using LanguageLearning.Domain
@inject NavigationManager NavigationManager
@inject HttpClient httpClient

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Lesson</h2>
<hr />
@if (Lesson is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Lesson" OnValidSubmit="UpdateLesson" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Lesson.Id" value="@Lesson.Id" />
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <InputText id="title" @bind-Value="Lesson.Title" class="form-control" />
                    <ValidationMessage For="() => Lesson.Title" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <InputText id="description" @bind-Value="Lesson.Description" class="form-control" />
                    <ValidationMessage For="() => Lesson.Description" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="difficultylvl" class="form-label">DifficultyLvl:</label>
                    <InputNumber id="difficultylvl" @bind-Value="Lesson.DifficultyLvl" class="form-control" />
                    <ValidationMessage For="() => Lesson.DifficultyLvl" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="languageid" class="form-lable">LanguageId:</label>
                    <InputSelect id="languageid" @bind-Value="Lesson.LanguageId" class="form-control">
                        <option value="">--Select Language--</option>
                        @if (Languages != null)
                        {
                            foreach (var language in Languages)
                            {
                                <option value="@language.Id">@language.Name</option>
                            }
                        }
                    </InputSelect>
                </div>
                @* <div class="mb-3">
                    <label for="languageid" class="form-label">LanguageId:</label>
                    <InputNumber id="languageid" @bind-Value="Lesson.LanguageId" class="form-control" />
                    <ValidationMessage For="() => Lesson.LanguageId" class="text-danger" />
                </div> *@
                <div class="mb-3">
                    <label for="datecreated" class="form-label">DateCreated:</label>
                    <InputDate id="datecreated" @bind-Value="Lesson.DateCreated" class="form-control" />
                    <ValidationMessage For="() => Lesson.DateCreated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="dateupdated" class="form-label">DateUpdated:</label>
                    <InputDate id="dateupdated" @bind-Value="Lesson.DateUpdated" class="form-control" />
                    <ValidationMessage For="() => Lesson.DateUpdated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="createdby" class="form-label">CreatedBy:</label>
                    <InputText id="createdby" @bind-Value="Lesson.CreatedBy" class="form-control" />
                    <ValidationMessage For="() => Lesson.CreatedBy" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="updatedby" class="form-label">UpdatedBy:</label>
                    <InputText id="updatedby" @bind-Value="Lesson.UpdatedBy" class="form-control" />
                    <ValidationMessage For="() => Lesson.UpdatedBy" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/admin/lessons">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Lesson? Lesson { get; set; }

    //Create userId string to store the user id, default value is "System".
    private string userId = "System";
    //Inject the AuthenticationStateProvider to get the user id.
    @inject AuthenticationStateProvider authenticationStateProvider

    private IList<Language> Languages;

    protected override async Task OnInitializedAsync()
    {
        var authState = await authenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        // Get the userId claim
        var userIdClaim = user.FindFirst("userId");
        if (userIdClaim != null)
        {
            userId = userIdClaim.Value;
        }

        // Only load from API if Language is not already bound from form
        if (Lesson is null)
        {
            Lesson = await httpClient.GetFromJsonAsync<Lesson>($"api/lessons/{Id}");
            StateHasChanged();

            if (Lesson is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
        Languages = await httpClient.GetFromJsonAsync<IList<Language>>("api/languages");
        StateHasChanged();

    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateLesson()
    {
        //Set the userId to the UpdatedBy fields.
        Lesson.UpdatedBy = userId;
        //Set the DateUpdated fields to the current date and time.
        Lesson.DateUpdated = DateTime.Now;

        var response = await httpClient.PutAsJsonAsync($"api/lessons/{Lesson.Id}", Lesson);

        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("/admin/lessons");
        }
        else if (response.StatusCode == System.Net.HttpStatusCode.NotFound)
        {
            NavigationManager.NavigateTo("notfound");
        }
        else
        {
            // Handle other errors (optional)
            var errorMessage = await response.Content.ReadAsStringAsync();
            // You could show an error message to the user here
            Console.WriteLine($"Error updating lesson: {errorMessage}");
        }
    }
}
