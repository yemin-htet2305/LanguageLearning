@page "/admin/lessons"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using LanguageLearning.Domain
@using LanguageLearning.Data
@rendermode InteractiveServer
@inject HttpClient httpClient

<link href="Manage.css" rel="stylesheet" />
<PageTitle>Index</PageTitle>

<div class="w-100 d-flex justify-content-end align-items-center">
    <a class="btn create-btn text-center" href="admin/lessons/create">Create New Lesson <i class="bi bi-plus-circle"></i></a>
</div>
<QuickGrid Class="table table-hover" Items="FilteredLessons" Pagination="paginationState">
    <PropertyColumn Property="lesson => lesson.Title" Sortable="true">
        <ColumnOptions>
            <div>
            <input type="search" @bind="searchText" @bind:event="oninput" autofocus />
            </div>
        </ColumnOptions>
    </PropertyColumn>
    <PropertyColumn Property="lesson => lesson.Description" Sortable="true" />
    <PropertyColumn Property="lesson => lesson.DifficultyLvl" Sortable="true" />
    <PropertyColumn Property="lesson => lesson.LanguageId" Sortable="true" />
    
    <TemplateColumn Context="lesson">
        <a class="btn edit-btn" href="@($"admin/lessons/edit?id={lesson.Id}")"><i class="bi bi-pencil-square"></i></a> |
        <a class="btn detail-btn" href="@($"admin/lessons/details?id={lesson.Id}")"><i class="bi bi-ticket-detailed"></i></a> |
        <a class="btn delete-btn" href="@($"admin/lessons/delete?id={lesson.Id}")"><i class="bi bi-trash"></i></a>
    </TemplateColumn>
</QuickGrid>
<div style="color: #845007;">
    <Paginator State="paginationState" />
</div>


@code {
    PaginationState paginationState = new PaginationState { ItemsPerPage = 5 };

    List<Lesson> Lessons = new();
    string searchText = "";
    IQueryable<Lesson> FilteredLessons => Lessons.Where(l => l.Title.Contains(searchText)).AsQueryable();

    protected override async Task OnInitializedAsync()
    {
        Lessons = await httpClient.GetFromJsonAsync<List<Lesson>>("api/lessons") ?? new List<Lesson>();
    }
    // amendable
}
