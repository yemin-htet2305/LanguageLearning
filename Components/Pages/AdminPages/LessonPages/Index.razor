@page "/lessons"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using LanguageLearning.Domain
@using LanguageLearning.Data
@implements IAsyncDisposable
@inject IDbContextFactory<LanguageLearning.Data.LanguageLearningContext> DbFactory
@rendermode InteractiveServer

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="lessons/create">Create New</a>
</p>

<QuickGrid Class="table" Items="FilteredLessons" Pagination="paginationState">
    <PropertyColumn Property="lesson => lesson.Title" Sortable="true">
        <ColumnOptions>
            <div>
            <input type="search" @bind="searchText" @bind:event="oninput" autofocus />
            </div>
        </ColumnOptions>
    </PropertyColumn>
    <PropertyColumn Property="lesson => lesson.Description" Sortable="true" />
    <PropertyColumn Property="lesson => lesson.DifficultyLvl" Sortable="true" />
    <PropertyColumn Property="lesson => lesson.LanguageId" Sortable="true" />
    <PropertyColumn Property="lesson => lesson.DateCreated" Sortable="true" />
    <PropertyColumn Property="lesson => lesson.DateUpdated" Sortable="true" />
    <PropertyColumn Property="lesson => lesson.CreatedBy" Sortable="true" />
    <PropertyColumn Property="lesson => lesson.UpdatedBy" Sortable="true" />

    <TemplateColumn Context="lesson">
        <a href="@($"lessons/edit?id={lesson.Id}")">Edit</a> |
        <a href="@($"lessons/details?id={lesson.Id}")">Details</a> |
        <a href="@($"lessons/delete?id={lesson.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>
<Paginator State="paginationState" />

@code {
    private LanguageLearningContext context = default!;
    PaginationState paginationState = new PaginationState { ItemsPerPage = 1 };

    private string searchText = "";
    private IQueryable<Lesson> FilteredLessons => context.Lesson.Where(l =>
    l.Title.Contains(searchText));

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
