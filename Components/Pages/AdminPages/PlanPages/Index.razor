@page "/plans"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using LanguageLearning.Domain
@using LanguageLearning.Data
@implements IAsyncDisposable
@inject IDbContextFactory<LanguageLearning.Data.LanguageLearningContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="plans/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Plan">
    <PropertyColumn Property="plan => plan.Name" />
    <PropertyColumn Property="plan => plan.Price" />
    <PropertyColumn Property="plan => plan.BillingCycle" />
    <PropertyColumn Property="plan => plan.DateCreated" />
    <PropertyColumn Property="plan => plan.DateUpdated" />
    <PropertyColumn Property="plan => plan.CreatedBy" />
    <PropertyColumn Property="plan => plan.UpdatedBy" />

    <TemplateColumn Context="plan">
        <a href="@($"plans/edit?id={plan.Id}")">Edit</a> |
        <a href="@($"plans/details?id={plan.Id}")">Details</a> |
        <a href="@($"plans/delete?id={plan.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private LanguageLearningContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
