@page "/plans"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using LanguageLearning.Domain
@using LanguageLearning.Data
@implements IAsyncDisposable
@inject IDbContextFactory<LanguageLearning.Data.LanguageLearningContext> DbFactory
@rendermode InteractiveServer

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="plans/create">Create New</a>
</p>

<QuickGrid Class="table" Items="FilteredPlans" Pagination="paginationState">
    <PropertyColumn Property="plan => plan.Name" Sortable="true">
        <ColumnOptions>
            <div>
                <input type="search" @bind="searchText" @bind:event="oninput" autofocus />
            </div>
        </ColumnOptions>
    </PropertyColumn>
    <PropertyColumn Property="plan => plan.Price" Sortable="true" />
    <PropertyColumn Property="plan => plan.BillingCycle" Sortable="true" />
    <PropertyColumn Property="plan => plan.DateCreated" Sortable="true" />
    <PropertyColumn Property="plan => plan.DateUpdated" Sortable="true" />
    <PropertyColumn Property="plan => plan.CreatedBy" Sortable="true" />
    <PropertyColumn Property="plan => plan.UpdatedBy" Sortable="true" />

    <TemplateColumn Context="plan">
        <a href="@($"plans/edit?id={plan.Id}")">Edit</a> |
        <a href="@($"plans/details?id={plan.Id}")">Details</a> |
        <a href="@($"plans/delete?id={plan.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>
<Paginator State="paginationState" />

@code {
    private LanguageLearningContext context = default!;
    PaginationState paginationState = new PaginationState { ItemsPerPage = 1 };

    private string searchText = "";
    private IQueryable<Plan> FilteredPlans => context.Plan.Where(p =>
    p.Name.Contains(searchText));

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
