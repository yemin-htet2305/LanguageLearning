@page "/plans/create"
@using Microsoft.EntityFrameworkCore
@using LanguageLearning.Domain
@inject IDbContextFactory<LanguageLearning.Data.LanguageLearningContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Plan</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Plan" OnValidSubmit="AddPlan" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="Plan.Name" class="form-control" /> 
                <ValidationMessage For="() => Plan.Name" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="price" class="form-label">Price:</label> 
                <InputNumber id="price" @bind-Value="Plan.Price" class="form-control" /> 
                <ValidationMessage For="() => Plan.Price" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="billingcycle" class="form-label">BillingCycle:</label> 
                <InputText id="billingcycle" @bind-Value="Plan.BillingCycle" class="form-control" /> 
                <ValidationMessage For="() => Plan.BillingCycle" class="text-danger" /> 
            </div>        
            <div class="mb-3" hidden>
                <label for="datecreated" class="form-label">DateCreated:</label> 
                <InputDate id="datecreated" @bind-Value="Plan.DateCreated" class="form-control" /> 
                <ValidationMessage For="() => Plan.DateCreated" class="text-danger" /> 
            </div>        
            <div class="mb-3" hidden>
                <label for="dateupdated" class="form-label">DateUpdated:</label> 
                <InputDate id="dateupdated" @bind-Value="Plan.DateUpdated" class="form-control" /> 
                <ValidationMessage For="() => Plan.DateUpdated" class="text-danger" /> 
            </div>        
            <div class="mb-3" hidden>
                <label for="createdby" class="form-label">CreatedBy:</label> 
                <InputText id="createdby" @bind-Value="Plan.CreatedBy" class="form-control" /> 
                <ValidationMessage For="() => Plan.CreatedBy" class="text-danger" /> 
            </div>        
            <div class="mb-3" hidden>
                <label for="updatedby" class="form-label">UpdatedBy:</label> 
                <InputText id="updatedby" @bind-Value="Plan.UpdatedBy" class="form-control" /> 
                <ValidationMessage For="() => Plan.UpdatedBy" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/plans">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Plan Plan { get; set; } = new();
    //Create userId string to store the user id, default value is "System".
    private string userId = "System";
    //Inject the AuthenticationStateProvider to get the user id.
    @inject AuthenticationStateProvider authenticationStateProvider

    //Override the OnInitialized method to get the user id.
    protected override async void OnInitialized()
    {
        var authState = await authenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        // Get the userId claim
        var userIdClaim = user.FindFirst("userId");
        if (userIdClaim != null)
        {
            userId = userIdClaim.Value;
        }
    }

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddPlan()
    {
        Plan.CreatedBy = userId;
        Plan.UpdatedBy = userId;
        Plan.DateUpdated = DateTime.Now;
        Plan.DateCreated = DateTime.Now;

        using var context = DbFactory.CreateDbContext();
        context.Plan.Add(Plan);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/plans");
    }
}
