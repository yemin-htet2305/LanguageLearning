@page "/plans/delete"
@using Microsoft.EntityFrameworkCore
@using LanguageLearning.Domain
@inject IDbContextFactory<LanguageLearning.Data.LanguageLearningContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Plan</h2>
    <hr />
    @if (plan is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@plan.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@plan.Price</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">BillingCycle</dt>
            <dd class="col-sm-10">@plan.BillingCycle</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@plan.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@plan.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@plan.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@plan.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="plan" OnValidSubmit="DeletePlan" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(plan is null)">Delete</button> |
            <a href="/plans">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Plan? plan;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        plan = await context.Plan.FirstOrDefaultAsync(m => m.Id == Id);

        if (plan is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeletePlan()
    {
        using var context = DbFactory.CreateDbContext();
        context.Plan.Remove(plan!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/plans");
    }
}
