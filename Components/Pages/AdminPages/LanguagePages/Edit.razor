@page "/admin/languages/edit"
@using Microsoft.EntityFrameworkCore
@using LanguageLearning.Domain
@inject IDbContextFactory<LanguageLearning.Data.LanguageLearningContext> DbFactory
@inject NavigationManager NavigationManager
@inject HttpClient httpClient

<link href="Manage.css" rel="stylesheet"/>
<PageTitle>Edit</PageTitle>


@if (Language is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="d-flex align-items-center justify-content-center flex-column p-5 trans-bg rounded trans-bg w-50 gap-1">
        <h1 style="color: #845007;">Edit Langauage</h1>
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="w-100 bg-transparent">
            <EditForm method="post" Model="Language" OnValidSubmit="UpdateLanguage" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Language.Id" value="@Language.Id" />
                <div class="mb-3">
                        <label style="color: #845007;" for="name" class="form-label">Name:</label>
                        <InputText style="color: #845007;" id="name" @bind-Value="Language.Name" class="form-control" />
                    <ValidationMessage For="() => Language.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                        <label style="color: #845007;" for="description" class="form-label">Description:</label>
                        <InputText style="color: #845007;" id="description" @bind-Value="Language.Description" class="form-control" />
                    <ValidationMessage For="() => Language.Description" class="text-danger" />
                </div>
                <div class="mb-3" hidden>
                    <label for="datecreated" class="form-label">DateCreated:</label>
                    <InputDate id="datecreated" @bind-Value="Language.DateCreated" class="form-control" />
                    <ValidationMessage For="() => Language.DateCreated" class="text-danger" />
                </div>
                <div class="mb-3" hidden>
                    <label for="dateupdated" class="form-label">DateUpdated:</label>
                    <InputDate id="dateupdated" @bind-Value="Language.DateUpdated" class="form-control" />
                    <ValidationMessage For="() => Language.DateUpdated" class="text-danger" />
                </div>
                <div class="mb-3" hidden>
                    <label for="createdby" class="form-label">CreatedBy:</label>
                    <InputText id="createdby" @bind-Value="Language.CreatedBy" class="form-control" />
                    <ValidationMessage For="() => Language.CreatedBy" class="text-danger" />
                </div>
                <div class="mb-3" hidden>
                    <label for="updatedby" class="form-label">UpdatedBy:</label>
                    <InputText id="updatedby" @bind-Value="Language.UpdatedBy" class="form-control" />
                    <ValidationMessage For="() => Language.UpdatedBy" class="text-danger" />
                </div>
                    <div class="w-100 d-flex align-items-center justify-content-center my-2">
                        <button type="submit" class="btn log-btn">Submit</button>
                    </div>
            </EditForm>
        </div>
    </div>
    <div>
        <a class="log-link" href="/admin/languages">Back to List</a>
    </div>
    </div>
}



@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Language? Language { get; set; }

    //Create userId string to store the user id, default value is "System".
    private string userId = "System";
    //Inject the AuthenticationStateProvider to get the user id.
    @inject AuthenticationStateProvider authenticationStateProvider

    protected override async Task OnInitializedAsync()
    {
        var authState = await authenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        // Get the userId claim
        var userIdClaim = user.FindFirst("userId");
        if (userIdClaim != null)
        {
            userId = userIdClaim.Value;
        }

        // Only load from API if Language is not already bound from form
        if (Language is null)
        {
            Language = await httpClient.GetFromJsonAsync<Language>($"api/languages/{Id}");

            if (Language is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    private async Task UpdateLanguage()
    {
        //Set the userId to the UpdatedBy fields.
        Language.UpdatedBy = userId;
        //Set the DateUpdated fields to the current date and time.
        Language.DateUpdated = DateTime.Now;

        var response = await httpClient.PutAsJsonAsync($"api/languages/{Language.Id}", Language);

        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("admin/languages");
        }
        else if (response.StatusCode == System.Net.HttpStatusCode.NotFound)
        {
            NavigationManager.NavigateTo("notfound");
        }
        else
        {
            // Handle other errors (optional)
            var errorMessage = await response.Content.ReadAsStringAsync();
            // You could show an error message to the user here
            Console.WriteLine($"Error updating language: {errorMessage}");
        }
    }

}
