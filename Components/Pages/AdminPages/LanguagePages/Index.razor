@page "/languages"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using LanguageLearning.Domain
@using LanguageLearning.Data
@rendermode InteractiveServer
@inject HttpClient httpClient

<PageTitle>Index</PageTitle>
<h1>Index</h1>

<p>
    <a href="languages/create">Create New</a>
</p>

<QuickGrid Class="table" Items="FilteredLanguages" Pagination="paginationState">
    <PropertyColumn Property="language => language.Name" Sortable="true">
        <ColumnOptions>
            <div>
            <input type="search" @bind="searchText" @bind:event="oninput" autofocus />
            </div>
        </ColumnOptions>
    </PropertyColumn>
    <PropertyColumn Property="language => language.Description" Sortable="true" />
    <PropertyColumn Property="language => language.DateCreated" Sortable="true" />
    <PropertyColumn Property="language => language.DateUpdated" Sortable="true" />
    <PropertyColumn Property="language => language.CreatedBy" Sortable="true" />
    <PropertyColumn Property="language => language.UpdatedBy" Sortable="true"/>

    <TemplateColumn Context="language">
        <a href="@($"languages/edit?id={language.Id}")">Edit</a> |
        <a href="@($"languages/details?id={language.Id}")">Details</a> |
        <a href="@($"languages/delete?id={language.Id}")">Delete</a>
        
    </TemplateColumn>
</QuickGrid> 
<Paginator State="paginationState"/>

@code {
    PaginationState paginationState = new PaginationState { ItemsPerPage = 5 };

    List<Language> Languages = new();
    string searchText = "";
    IQueryable<Language> FilteredLanguages => Languages.Where(l => l.Name.Contains(searchText)).AsQueryable();

    protected override async Task OnInitializedAsync()
    {
        Languages = await httpClient.GetFromJsonAsync<List<Language>>("api/languages") ?? new List<Language>();
    }
    // amendable
}
