@page "/languages"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using LanguageLearning.Domain
@using LanguageLearning.Data
@implements IAsyncDisposable
@inject IDbContextFactory<LanguageLearning.Data.LanguageLearningContext> DbFactory
@rendermode InteractiveServer

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="languages/create">Create New</a>
</p>

<QuickGrid Class="table" Items="FilterdLanguages" Pagination="paginationState">
    <PropertyColumn Property="language => language.Name" Sortable="true">
        <ColumnOptions>
            <div>
            <input type="search" @bind="searchText" @bind:event="oninput" autofocus />
            </div>
        </ColumnOptions>
    </PropertyColumn>
    <PropertyColumn Property="language => language.Description" Sortable="true" />
    <PropertyColumn Property="language => language.DateCreated" Sortable="true" />
    <PropertyColumn Property="language => language.DateUpdated" Sortable="true" />
    <PropertyColumn Property="language => language.CreatedBy" Sortable="true" />
    <PropertyColumn Property="language => language.UpdatedBy" Sortable="true"/>

    <TemplateColumn Context="language">
        <a href="@($"languages/edit?id={language.Id}")">Edit</a> |
        <a href="@($"languages/details?id={language.Id}")">Details</a> |
        <a href="@($"languages/delete?id={language.Id}")">Delete</a>
        
    </TemplateColumn>
</QuickGrid>
@* <Paginator State="paginationState"/> *@

@code {

    PaginationState paginationState = new PaginationState { ItemsPerPage = 2 };
    private LanguageLearningContext context = default!;

    private string searchText = "";
    private IQueryable<Language> FilterdLanguages => context.Language.Where(l => l.Name.Contains(searchText));

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
