@page "/admin/languages/details"
@using Microsoft.EntityFrameworkCore
@using LanguageLearning.Domain
@inject IDbContextFactory<LanguageLearning.Data.LanguageLearningContext> DbFactory
@inject NavigationManager NavigationManager

<link href="Manage.css" rel="stylesheet"/>
<PageTitle>Details</PageTitle>

<h1 style="color: #845007;">Details</h1>

<div style="color: #845007;">
    <h2>Language</h2>
    <hr />
    @if (language is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@language.Name</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@language.Description</dd>
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@language.DateCreated</dd>
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@language.DateUpdated</dd>
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@language.CreatedBy</dd>
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@language.UpdatedBy</dd>
        </dl>
        <div>
            <a class="btn log-btn" href="@($"/admin/languages/edit?id={language.Id}")">Edit</a> |
            <a class="btn log-btn" href="@($"/admin/languages")">Back to List</a>
        </div>
    }
</div>

@code {
    private Language? language;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        language = await context.Language.FirstOrDefaultAsync(m => m.Id == Id);

        if (language is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
