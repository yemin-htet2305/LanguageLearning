@page "/admin/quizzes/edit"
@using Microsoft.EntityFrameworkCore
@using LanguageLearning.Domain
@inject NavigationManager NavigationManager
@inject HttpClient httpClient

<link href="Manage.css" rel="stylesheet" />
<PageTitle>Edit</PageTitle>
@if (Quiz is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div style="color: #845007;" class="d-flex align-items-center justify-content-center flex-column p-5 trans-bg rounded trans-bg w-50 gap-1">
        <h1 >Edit Quiz</h1>
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="w-100 bg-transparent">
            <EditForm method="post" Model="Quiz" OnValidSubmit="UpdateQuiz" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Quiz.Id" value="@Quiz.Id" />
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                        <InputText style="color: #845007;" id="title" @bind-Value="Quiz.Title" class="form-control" />
                    <ValidationMessage For="() => Quiz.Title" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="iscompleted" class="form-label">IsCompleted:</label>
                        <InputCheckbox style="color: #845007;" id="iscompleted" @bind-Value="Quiz.IsCompleted" class="form-check-input" />
                    <ValidationMessage For="() => Quiz.IsCompleted" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="lessonid" class="form-label">LessonId:</label>
                        <InputSelect style="color: #845007;" id="lessonid" @bind-Value="Quiz.LessonId" class="form-control">
                        <option value="">-- Select Lesson --</option>
                        @if (Lessons != null)
                        {
                            foreach (var lesson in Lessons)
                            {
                                <option value="@lesson.Id">@lesson.Title</option>
                            }
                        }
                    </InputSelect>
                </div>
                @* <div class="mb-3">
                    <label for="lessonid" class="form-label">LessonId:</label>
                    <InputNumber id="lessonid" @bind-Value="Quiz.LessonId" class="form-control" />
                    <ValidationMessage For="() => Quiz.LessonId" class="text-danger" />
                </div> *@
                <div class="mb-3" hidden>
                    <label for="datecreated" class="form-label">DateCreated:</label>
                    <InputDate id="datecreated" @bind-Value="Quiz.DateCreated" class="form-control" />
                    <ValidationMessage For="() => Quiz.DateCreated" class="text-danger" />
                </div>
                <div class="mb-3" hidden>
                    <label for="dateupdated" class="form-label">DateUpdated:</label>
                    <InputDate id="dateupdated" @bind-Value="Quiz.DateUpdated" class="form-control" />
                    <ValidationMessage For="() => Quiz.DateUpdated" class="text-danger" />
                </div>
                <div class="mb-3" hidden>
                    <label for="createdby" class="form-label">CreatedBy:</label>
                    <InputText id="createdby" @bind-Value="Quiz.CreatedBy" class="form-control" />
                    <ValidationMessage For="() => Quiz.CreatedBy" class="text-danger" />
                </div>
                <div class="mb-3" hidden>
                    <label for="updatedby" class="form-label">UpdatedBy:</label>
                    <InputText id="updatedby" @bind-Value="Quiz.UpdatedBy" class="form-control" />
                    <ValidationMessage For="() => Quiz.UpdatedBy" class="text-danger" />
                </div>
                    <div class ="w-100 d-flex align-items-center justify-content-center my-2">
                        <button type="submit" class="btn log-btn">Save</button>
                    </div>
                
            </EditForm>
        </div>
    </div>
    <div>
        <a class="log-link" href="/admin/quizzes">Back to List</a>
    </div>
    </div>
}



@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Quiz? Quiz { get; set; }

    //Create userId string to store the user id, default value is "System".
    private string userId = "System";
    //Inject the AuthenticationStateProvider to get the user id.
    @inject AuthenticationStateProvider authenticationStateProvider

    private IList<Lesson> Lessons;

    protected override async Task OnInitializedAsync()
    {
        var authState = await authenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        // Get the userId claim
        var userIdClaim = user.FindFirst("userId");
        if (userIdClaim != null)
        {
            userId = userIdClaim.Value;
        }

        // Only load from API if Language is not already bound from form
        if (Quiz is null)
        {
            Quiz = await httpClient.GetFromJsonAsync<Quiz>($"api/quizs/{Id}");
            StateHasChanged();

            if (Quiz is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
        Lessons = await httpClient.GetFromJsonAsync<IList<Lesson>>("api/lessons");
        StateHasChanged();
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateQuiz()
    {
        //Set the userId to the UpdatedBy fields.
        Quiz.UpdatedBy = userId;
        //Set the DateUpdated fields to the current date and time.
        Quiz.DateUpdated = DateTime.Now;

        var response = await httpClient.PutAsJsonAsync($"api/quizs/{Quiz.Id}", Quiz);

        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("/admin/quizzes");
        }
        else if (response.StatusCode == System.Net.HttpStatusCode.NotFound)
        {
            NavigationManager.NavigateTo("notfound");
        }
        else
        {
            // Handle other errors (optional)
            var errorMessage = await response.Content.ReadAsStringAsync();
            // You could show an error message to the user here
            Console.WriteLine($"Error updating quiz: {errorMessage}");
        }
    }

   
}
