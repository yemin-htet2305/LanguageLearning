@page "/quizzes"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using LanguageLearning.Domain
@using LanguageLearning.Data
@implements IAsyncDisposable
@inject IDbContextFactory<LanguageLearning.Data.LanguageLearningContext> DbFactory
@rendermode InteractiveServer

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="quizzes/create">Create New</a>
</p>

<QuickGrid Class="table" Items="FilteredQuizzes" Pagination="paginationState">
    <PropertyColumn Property="quiz => quiz.Title" Sortable="true">
        <ColumnOptions>
            <div>
                <input type="search" @bind="searchText" @bind:event="oninput" autofocus />
            </div>
        </ColumnOptions>
    </PropertyColumn>
    <PropertyColumn Property="quiz => quiz.IsCompleted" Sortable="true"/>
    <PropertyColumn Property="quiz => quiz.LessonId" Sortable="true" />
    <PropertyColumn Property="quiz => quiz.DateCreated" Sortable="true" />
    <PropertyColumn Property="quiz => quiz.DateUpdated" Sortable="true" />
    <PropertyColumn Property="quiz => quiz.CreatedBy" Sortable="true" />
    <PropertyColumn Property="quiz => quiz.UpdatedBy" Sortable="true" />

    <TemplateColumn Context="quiz">
        <a href="@($"quizzes/edit?id={quiz.Id}")">Edit</a> |
        <a href="@($"quizzes/details?id={quiz.Id}")">Details</a> |
        <a href="@($"quizzes/delete?id={quiz.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>
<Paginator State="paginationState" />

@code {
    private LanguageLearningContext context = default!;
    PaginationState paginationState = new PaginationState { ItemsPerPage = 1 };

    private string searchText = "";
    private IQueryable<Quiz> FilteredQuizzes => context.Quiz.Where(q =>
    q.Title.Contains(searchText));

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
