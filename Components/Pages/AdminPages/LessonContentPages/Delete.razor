@page "/admin/lessoncontents/delete"
@using Microsoft.EntityFrameworkCore
@using LanguageLearning.Domain
@inject NavigationManager NavigationManager
@inject HttpClient httpClient

<link href="Manage.css" rel="stylesheet" />
<PageTitle>Delete</PageTitle>

<h1 style="color: red">Delete</h1>

<p style="color: red">Are you sure you want to delete this?</p>
<div style="color: #845007" class="w-100">
    <h2>LessonContent</h2>
    <hr />
    @if (lessoncontent is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ContentType</dt>
            <dd class="col-sm-10">@lessoncontent.ContentType</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ContentText</dt>
            <dd class="col-sm-10">@lessoncontent.ContentText</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LessonId</dt>
            <dd class="col-sm-10">@lessoncontent.LessonId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@lessoncontent.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@lessoncontent.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@lessoncontent.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@lessoncontent.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="lessoncontent" OnValidSubmit="DeleteLessonContent" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(lessoncontent is null)">Delete</button> |
            <a class="btn log-btn" href="/admin/lessoncontents">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private LessonContent? lessoncontent;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        lessoncontent = await httpClient.GetFromJsonAsync<LessonContent>($"api/lessoncontents/{Id}");
    }

    private async Task DeleteLessonContent()
    {
        var response = await httpClient.DeleteAsync($"api/lessoncontents/{lessoncontent.Id}");

        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("/admin/lessoncontents");
        }
        else if (response.StatusCode == System.Net.HttpStatusCode.NotFound)
        {
            NavigationManager.NavigateTo("notfound");
        }
        else
        {
            // Handle other errors (optional)
            var errorMessage = await response.Content.ReadAsStringAsync();
            Console.WriteLine($"Error deleting lessonContent: {errorMessage}");
        }
    }
}
