@page "/lessoncontents"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using LanguageLearning.Domain
@using LanguageLearning.Data
@implements IAsyncDisposable
@inject IDbContextFactory<LanguageLearning.Data.LanguageLearningContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="lessoncontents/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.LessonContent">
    <PropertyColumn Property="lessoncontent => lessoncontent.ContentType" />
    <PropertyColumn Property="lessoncontent => lessoncontent.PositionOrder" />
    <PropertyColumn Property="lessoncontent => lessoncontent.LessonId" />
    <PropertyColumn Property="lessoncontent => lessoncontent.DateCreated" />
    <PropertyColumn Property="lessoncontent => lessoncontent.DateUpdated" />
    <PropertyColumn Property="lessoncontent => lessoncontent.CreatedBy" />
    <PropertyColumn Property="lessoncontent => lessoncontent.UpdatedBy" />

    <TemplateColumn Context="lessoncontent">
        <a href="@($"lessoncontents/edit?id={lessoncontent.Id}")">Edit</a> |
        <a href="@($"lessoncontents/details?id={lessoncontent.Id}")">Details</a> |
        <a href="@($"lessoncontents/delete?id={lessoncontent.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private LanguageLearningContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
