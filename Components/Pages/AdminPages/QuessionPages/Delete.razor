@page "/quessions/delete"
@using Microsoft.EntityFrameworkCore
@using LanguageLearning.Domain
@inject NavigationManager NavigationManager
@inject HttpClient httpClient

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Quession</h2>
    <hr />
    @if (quession is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Text</dt>
            <dd class="col-sm-10">@quession.Text</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">OptA</dt>
            <dd class="col-sm-10">@quession.OptA</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">OptB</dt>
            <dd class="col-sm-10">@quession.OptB</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">OptC</dt>
            <dd class="col-sm-10">@quession.OptC</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">OptD</dt>
            <dd class="col-sm-10">@quession.OptD</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CorrrectAnswer</dt>
            <dd class="col-sm-10">@quession.CorrrectAnswer</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">QuizId</dt>
            <dd class="col-sm-10">@quession.QuizId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@quession.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@quession.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@quession.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@quession.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="quession" OnValidSubmit="DeleteQuession" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(quession is null)">Delete</button> |
            <a href="/quessions">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Quession? quession;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        quession = await httpClient.GetFromJsonAsync<Quession>($"api/quessions/{Id}");
    }

    private async Task DeleteQuession()
    {
        var response = await httpClient.DeleteAsync($"api/quessions/{quession.Id}");

        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("/quessions");
        }
        else if (response.StatusCode == System.Net.HttpStatusCode.NotFound)
        {
            NavigationManager.NavigateTo("notfound");
        }
        else
        {
            // Handle other errors (optional)
            var errorMessage = await response.Content.ReadAsStringAsync();
            Console.WriteLine($"Error deleting quession: {errorMessage}");
        }
    }
}
