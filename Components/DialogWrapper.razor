@rendermode InteractiveServer
@inject NavigationManager Navigation


<button type="button" class="btn btn-light px-3 py-1" style="color: #845007; font-weight: bold;
font-size: 1.25rem;
border: 1px solid black;"
        onmouseover="
        this.style.backgroundColor='#A9A9A9';
    "
        onmouseout="
        this.style.backgroundColor='#ffffff';
    "
@onclick="OpenDialog">
    Getting Started
</button>

@if (isDialogOpen)
{
    <div class="modal fade show" style="display: block;" tabindex="-1" @onclick="CloseDialog">
        <div class="modal-dialog modal-dialog-centered" @onclick:stopPropagation="true">
            <div class="modal-content">
                <div class="modal-header justify-content-center">
                    <p class="modal-title text-end fw-bold fs-3" style="color: #845007;">Welcome To OurLingua</p>
                    
                </div>
                <div class="modal-body d-flex flex-column gap-3" >
                    <button type="button" class="btn btn-primary px-4" @onclick="HandleSignIn">Sign In</button>
                    <button type="button" class="btn btn-success px-4" @onclick="HandleRegister">Register</button>
                    <p class="text-center" style="color: #845007;">Please choose an option to continue</p>
                </div>
                <div class="modal-footer justify-content-center" >
                    <button type="button" class="btn btn-dark" @onclick="CloseDialog">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private bool isDialogOpen = false;

    private void OpenDialog()
    {
        isDialogOpen = true;
    }

    private void CloseDialog()
    {
        isDialogOpen = false;
    }

    private void HandleSignIn()
    {
        Navigation.NavigateTo("/Account/Login");
        isDialogOpen = false;
    }

    private void HandleRegister()
    {
        Navigation.NavigateTo("/Account/Register");
        isDialogOpen = false;
    }
}